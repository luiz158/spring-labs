<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
    xmlns:c="http://www.springframework.org/schema/c" xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="baseRepository" abstract="true"
          p:dataSource-ref="dataSource" />

    <bean id="accountRepository" parent="baseRepository"
          class="savings.repository.impl.JdbcAccountRepository"/>

    <bean id="merchantRepository" parent="baseRepository"
          class="savings.repository.impl.JdbcMerchantRepository"/>

    <bean id="paybackRepository" parent="baseRepository"
          class="savings.repository.impl.JdbcPaybackRepository"/>

    <bean id="paybackBookKeeper" class="savings.service.impl.PaybackBookKeeperImpl"
        c:accountRepository-ref="accountRepository"
        c:merchantRepository-ref="merchantRepository"
        c:paybackRepository-ref="paybackRepository" />

</beans>
